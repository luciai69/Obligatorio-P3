@model IEnumerable<LogicaNegocio.CarpetaDtos.ArticuloDto>

@{
    ViewData["Title"] = "Catalogo";
}

<h1>Catalogo</h1>


@if (ViewBag.Mensaje != null)
{
    @if (ViewBag.Error)
    {
        <div class="alert alert-danger" role="alert">
            <p>@ViewBag.Mensaje</p>
        </div>
    }
    else
    {
        <div class="alert alert-success" role="alert">
            <p>@ViewBag.Mensaje</p>
        </div>
    }
}
<div>
    <form method="post" action="Checkout">
        <input type="text" name="IdCliente" placeholder="Id del cliente" />
        <button type="submit">Comprar</button>
    </form>

    <button type="button" id="btnLimpiar">Limpiar</button>
    <button type="button" id="btnVer">Ver</button>
</div>

<div>
    Cantidad de Item: @ViewBag.cantidad
    Monto Total: @ViewBag.total
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
                <td>
                    <form action="AgregarItem" method="post">
                        <input type="int" name="idArticulo" value="@item.Id" hidden />
                        <input type="number" name="cantidad" class="form-control" />
                        <button type="submit" class="btn btn-primary">Agregar</button>
                    </form>
                </td>
        </tr>
}
    </tbody>
</table>

@if (ViewBag.catalogo != null)
{
    <div id="catalogo" style="display:none">

        <h2>Productos seleccionados</h2>

        <table class="table">
            <tbody>
                @foreach (LineaDto linea in ViewBag.catalogo)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Discriminator)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreTema)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cantidad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrecioSugerido)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
@section Scripts
{
    <script>      
        window.onload

        const btnVer = document.querySelector('#btnVer');

        btnVer.addEventListener('click', function () {
            const catalogo = document.querySelector('#catalogo');
            if (catalogo.style.display === "none") {
                catalogo.style.display = "block";
            } else {
                catalogo.style.display = "none";
            }
        });
    </script>
}